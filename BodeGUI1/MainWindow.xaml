<Window xmlns:View="clr-namespace:BodeGUI1.View" x:Class="BodeGUI1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BodeGUI1"
        xmlns:vm="clr-namespace:BodeGUI1.ViewModel"
        xmlns:v="clr-namespace:BodeGUI1.View"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding ProgViewModel, Mode=TwoWay}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:ProgViewModel}">
                    <v:ProgView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
